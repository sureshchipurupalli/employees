<div class="authform">
  <%= form_tag({controller: 'registrations', action: 'create'},:method => 'post') %>
  <h3>Sign up</h3>
  <div class="form-group">
    <%= text_field_tag "user[name]",@user.name,autofocus: true, class: "form-control",placeholder:"UserName" %>
  </div>
  <div class="form-group">
    <%= email_field_tag "user[email]",@user.email,autofocus: true, class: "form-control",placeholder:"Email" %>
  </div>
  <div class="form-group">
    <%= password_field_tag "user[password]",@user.password,autofocus: true, class: "form-control",placeholder:"Password" %>
  </div>
  <div class="form-group">
    <%= password_field_tag "user[password_confirmation]",@user.password,autofocus: true, class: "form-control",placeholder:"confirm Password" %>
  </div>
  <%= submit_tag nil, class: "btn btn-primary" %>


</div>